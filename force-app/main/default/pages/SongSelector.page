<apex:page showHeader="false" sidebar="false" standardStylesheets="false" docType="html-5.0">
    <apex:includeLightning />
    <html>
        <head>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <title>Song Selector - Christmas Music Bingo</title>
            <link rel="icon" type="image/svg+xml" href="{!$Resource.ChristmasBingoIcon}"/>
            <style>
                body {
                    margin: 0;
                    padding: 0;
                    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
                    background: 
                        radial-gradient(circle at 20% 30%, rgba(200, 16, 46, 0.15) 0%, transparent 50%),
                        radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                        radial-gradient(circle at 50% 50%, rgba(200, 16, 46, 0.1) 0%, transparent 50%),
                        linear-gradient(135deg, #1a5a1a 0%, #0d3d0d 50%, #1a5a1a 100%);
                    background-size: 100% 100%, 100% 100%, 100% 100%, 100% 200%;
                    min-height: 100vh;
                    position: relative;
                    overflow-x: hidden;
                }
                
                body::before {
                    content: '';
                    position: fixed;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    background-image: 
                        radial-gradient(3px 3px at 50px 50px, rgba(255, 255, 255, 0.4), transparent),
                        radial-gradient(2px 2px at 150px 100px, rgba(255, 255, 255, 0.3), transparent),
                        radial-gradient(2px 2px at 250px 200px, rgba(255, 255, 255, 0.35), transparent),
                        radial-gradient(3px 3px at 350px 50px, rgba(255, 255, 255, 0.3), transparent),
                        radial-gradient(2px 2px at 450px 250px, rgba(255, 255, 255, 0.4), transparent),
                        radial-gradient(2px 2px at 550px 150px, rgba(255, 255, 255, 0.3), transparent),
                        radial-gradient(3px 3px at 650px 300px, rgba(255, 255, 255, 0.35), transparent),
                        radial-gradient(2px 2px at 750px 100px, rgba(255, 255, 255, 0.3), transparent),
                        radial-gradient(2px 2px at 850px 200px, rgba(255, 255, 255, 0.4), transparent),
                        radial-gradient(3px 3px at 950px 50px, rgba(255, 255, 255, 0.3), transparent);
                    background-size: 
                        200px 200px, 180px 180px, 220px 220px, 190px 190px, 210px 210px,
                        200px 200px, 180px 180px, 220px 220px, 190px 190px, 210px 210px;
                    background-position: 
                        0 0, 100px 50px, 200px 100px, 300px 150px, 400px 200px,
                        500px 50px, 600px 100px, 700px 150px, 800px 200px, 900px 250px;
                    opacity: 0.6;
                    pointer-events: none;
                    animation: sparkle 15s linear infinite;
                    z-index: 0;
                }
                
                @keyframes sparkle {
                    0% {
                        transform: translateY(0);
                        opacity: 0.6;
                    }
                    50% {
                        opacity: 0.8;
                    }
                    100% {
                        transform: translateY(-20px);
                        opacity: 0.6;
                    }
                }
                
                .vf-container {
                    max-width: 1200px;
                    margin: 0 auto;
                    padding: 20px;
                    min-height: 100vh;
                    position: relative;
                    z-index: 1;
                }
                
                @media (max-width: 768px) {
                    .vf-container {
                        padding: 10px;
                    }
                }
            </style>
        </head>
        <body>
            <div class="vf-container">
                <div id="selectorContainer"></div>
            </div>
            <script>
                $Lightning.use("c:SongSelectorApp", function() {
                    $Lightning.createComponent(
                        "c:songSelector",
                        {},
                        "selectorContainer",
                        function(cmp) {
                            // Component created successfully
                        }
                    );
                });
            </script>
        </body>
    </html>
</apex:page>

